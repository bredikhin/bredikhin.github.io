extends ../layout

block content
  - var posts = env.helpers.getArticles(contents);
  each post in posts
    post.post.intro
      header
        p.date
          span= moment.utc(post.date).format('DD. MMMM YYYY')
        h2
          a(href=post.url)= post.title
      section.content
        | !{ typogr(post.intro).typogrify() }
        if post.hasMore
          p.more
            a(href=post.url) more
