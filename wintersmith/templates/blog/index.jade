extends ../layout

block content
  - var posts = env.helpers.getArticles(contents);
  each post in posts
    post.post.intro
      header
        h3.date
          span= moment.utc(post.date).format('YYYY-MM-DD')
        h2
          a(href=post.url)= post.title
      section.content
        | !{ typogr(post.intro).typogrify() }
        if post.hasMore
          p.more.right
            a(href=post.url) Read more &raquo;
    hr
